{
  "name": "@wawawoom/wui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "development": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "concurrently \"pnpm run watch:tokens\" \"storybook dev -p 6006\" --names \"tokens,storybook\" --prefix-colors \"cyan,blue\"",
    "watch:tokens": "nodemon",
    "build:tokens": "style-dictionary build --config ./style-dictionary/config.mjs",
    "build:lib": "tsc && vite build",
    "build:storybook": "storybook build --output-dir dist_storybook",
    "build": "pnpm run build:tokens && pnpm run test && pnpm run build:lib && pnpm run build:storybook",
    "deploy": "pnpm run build:storybook && SOURCE_DIR=\"libs/wui/dist_storybook\" FTP_DIR=\"/www/next/projects/wui/\" bash ../../scripts/deploy-wui.sh",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/addon-interactions": "^8.6.15",
    "@storybook/addon-links": "^8.6.15",
    "@storybook/blocks": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@storybook/test": "^8.6.15",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "storybook": "^8.6.15",
    "typescript": "~5.9.3",
    "vite": "^6.0.0",
    "style-dictionary": "^5.2.0",
    "nodemon": "^3.1.0",
    "concurrently": "^9.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
